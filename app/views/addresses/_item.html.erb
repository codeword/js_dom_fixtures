<%- address = item %>
<li>
  <p>
    <b>Street1:</b>
    <%=h address.street1 %>
  </p>
  
  <p>
    <b>Street2:</b>
    <%=h address.street2 %>
  </p>
  
  <p>
    <b>City:</b>
    <%=h address.city %>
  </p>
  
  <p>
    <b>State:</b>
    <%=h address.state %>
  </p>
  
  <p>
    <b>Zipcode:</b>
    <%=h address.zipcode %>
  </p>
  
  <%= link_to 'Edit', edit_address_path(address) %> |
